{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./build",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es6",
        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "types": [
            "mocha",
            "expect.js"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}