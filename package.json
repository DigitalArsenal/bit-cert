{
  "name": "bit-certs",
  "version": "1.0.0",
  "description": "Use Bitcoin keys to create provably secure x509 public key infrastructure certificates",
  "main": "src/keyconvert.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DigitalArsenal/bit-certs.git"
  },
  "keywords": [
    "Bitcoin",
    "BTC",
    "Public",
    "Key",
    "Infrastructure",
    "PKI",
    "x509",
    "certificates",
    "certificate",
    "authority"
  ],
  "author": "digitalarsenal.io, inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DigitalArsenal/bit-certs/issues"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      "ts"
    ],
    "timeout": 5000,
    "spec": [
      "test/**"
    ]
  },
  "homepage": "https://github.com/DigitalArsenal/bit-certs#readme",
  "scripts": {
    "test:browser": "karma start",
    "build:types": "tsc -p tsconfig.json --outDir build/types --declaration --emitDeclarationOnly",
    "test": "mocha -s 300 --require ./test/scripts/chai-setup.mjs",
    "test:dev": "env DEV=true mocha -s 300 -w --watch-files ./src/**/*,./test/**.*"
  },
  "devDependencies": {
    "@babel/plugin-transform-spread": "^7.14.6",
    "@types/base64-url": "^2.2.0",
    "@types/expect.js": "^0.3.29",
    "@types/mocha": "^5.2.5",
    "@types/node": "^15.12.5",
    "@types/sshpk": "^1.10.6",
    "@types/wif": "^2.0.2",
    "argon2": "^0.28.2",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.3.4",
    "core-js": "^3.15.2",
    "expect.js": "^0.3.1",
    "karma": "^6.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-mocha": "^2.0.1",
    "karma-typescript": "latest",
    "karma-typescript-es6-transform": "^5.5.1",
    "mocha": "^9.0.1",
    "ts-node": "^10.0.0",
    "typescript": "latest"
  },
  "dependencies": {
    "@peculiar/x509": "^1.3.2",
    "base64-url": "^2.3.3",
    "bip32": "^2.0.6",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^5.2.0",
    "buffer": "^6.0.3",
    "inquirer": "^8.1.1",
    "sshpk": "^1.16.1",
    "webcrypto-liner": "^1.2.4",
    "wif": "^2.0.6"
  }
}
